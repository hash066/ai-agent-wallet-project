# AI Agent Wallet Production Environment Configuration
# Copy this file to .env.prod and fill in your production values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_USER=aiwallet
DB_PASSWORD=your_secure_db_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_agent_wallet
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ==========================================
# EXTERNAL API KEYS
# ==========================================
ALCHEMY_API_KEY=your_alchemy_api_key_here
IPFS_API_KEY=your_ipfs_api_key_here
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here

# ==========================================
# BLOCKCHAIN NETWORKS
# ==========================================
VITE_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_key

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==========================================
# SSL/HTTPS CONFIGURATION
# ==========================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_TTL=3600  # 1 hour
CACHE_MAX_MEMORY=512mb

# ==========================================
# SECURITY HEADERS
# ==========================================
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000  # 1 year

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_AUDIT_LOG=true
ENABLE_RATE_LIMITING=true

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================
DEPLOY_ENV=production
DEPLOY_VERSION=1.0.0
DEPLOY_TIMESTAMP=$(date +%s)

# ==========================================
# ALERTING CONFIGURATION
# ==========================================
ALERT_EMAIL=admin@yourdomain.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==========================================
# PERFORMANCE MONITORING
# ==========================================
PERFORMANCE_MONITORING_ENABLED=true
ERROR_TRACKING_ENABLED=true
APM_ENABLED=true

# ==========================================
# COMPLIANCE & AUDIT
# ==========================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_ENCRYPTION_ENABLED=true

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================
NOMAD_BRIDGE_CONTRACT=0x0000000000000000000000000000000000000000  # Replace with actual contract
HOP_BRIDGE_CONTRACT=0x0000000000000000000000000000000000000000   # Replace with actual contract
LAYERZERO_ENDPOINT=0x0000000000000000000000000000000000000000     # Replace with actual endpoint

# ==========================================
# RESOURCE LIMITS
# ==========================================
MAX_CONNECTIONS=1000
MAX_WORKERS=4
MEMORY_LIMIT=2GB
CPU_LIMIT=2.0

# ==========================================
# HEALTH CHECKS
# ==========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ==========================================
# LOG AGGREGATION
# ==========================================
LOGSTASH_HOST=logstash.yourdomain.com
LOGSTASH_PORT=5044
ELASTICSEARCH_HOST=elasticsearch.yourdomain.com
ELASTICSEARCH_PORT=9200

# ==========================================
# CDN CONFIGURATION
# ==========================================
CDN_ENABLED=true
CDN_PROVIDER=cloudflare
CDN_ZONE_ID=your_cloudflare_zone_id
CDN_API_TOKEN=your_cloudflare_api_token

# ==========================================
# LOAD BALANCER CONFIGURATION
# ==========================================
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK=/health

# ==========================================
# AUTO SCALING CONFIGURATION
# ==========================================
AUTO_SCALING_ENABLED=true
AUTO_SCALING_MIN_INSTANCES=2
AUTO_SCALING_MAX_INSTANCES=10
AUTO_SCALING_CPU_THRESHOLD=70
AUTO_SCALING_MEMORY_THRESHOLD=80

# ==========================================
# BACKUP & DISASTER RECOVERY
# ==========================================
BACKUP_ENABLED=true
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
DR_REGION=us-west-2
DR_REPLICATION_ENABLED=true

# ==========================================
# COMPLIANCE MONITORING
# ==========================================
COMPLIANCE_MONITORING_ENABLED=true
COMPLIANCE_REPORT_SCHEDULE=monthly
COMPLIANCE_AUDIT_RETENTION=7_years
