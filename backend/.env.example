# AI Agent Wallet Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server port (default: 3000)
PORT=3000

# Node environment (development/production)
NODE_ENV=development

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Supabase/PostgreSQL connection string (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_agent_wallet

# OR individual database settings (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_agent_wallet
DB_USER=postgres
DB_PASSWORD=password

# ==========================================
# BLOCKCHAIN CONFIGURATION
# ==========================================

# Alchemy RPC URLs (get from https://dashboard.alchemy.com/)
ALCHEMY_SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_SEPOLIA_API_KEY
ALCHEMY_AMOY_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_AMOY_API_KEY

# Relayer private key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
RELAYER_PRIVATE_KEY=your_private_key_here

# ==========================================
# CONTRACT ADDRESSES
# ==========================================
# Update these with addresses from deployments/sepolia.json and deployments/amoy.json

# Sepolia Testnet Contracts
SEPOLIA_AGENT_REGISTRY=0x1234567890123456789012345678901234567890
SEPOLIA_POLICY_ENGINE=0x2345678901234567890123456789012345678901
SEPOLIA_AUDIT_LOG=0x3456789012345678901234567890123456789012
SEPOLIA_AGENT_ORACLE_CONSUMER=0x4567890123456789012345678901234567890123
SEPOLIA_AGENT_MARKETPLACE=0x5678901234567890123456789012345678901234
SEPOLIA_AGENT_COLLABORATION=0x6789012345678901234567890123456789012345
SEPOLIA_CROSS_CHAIN_EXECUTOR=0x7890123456789012345678901234567890123456

# Polygon Amoy Contracts
AMOY_AGENT_REGISTRY=0x8901234567890123456789012345678901234567
AMOY_POLICY_ENGINE=0x9012345678901234567890123456789012345678
AMOY_AUDIT_LOG=0x0123456789012345678901234567890123456789
AMOY_AGENT_ORACLE_CONSUMER=0x1234567890123456789012345678901234567890
AMOY_AGENT_MARKETPLACE=0x2345678901234567890123456789012345678901
AMOY_AGENT_COLLABORATION=0x3456789012345678901234567890123456789012
AMOY_CROSS_CHAIN_EXECUTOR=0x4567890123456789012345678901234567890123

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

# SMTP Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ==========================================
# IPFS CONFIGURATION
# ==========================================

# Pinata IPFS credentials (get from https://pinata.cloud/)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ==========================================
# AUTHENTICATION
# ==========================================

# JWT Secret Key (generate a secure random string)
JWT_SECRET=your-very-secure-jwt-secret-key-change-in-production

# ==========================================
# OPTIONAL SETTINGS
# ==========================================

# Require authentication (set to true in production)
REQUIRE_AUTH=false

# Log level (debug/info/warn/error)
LOG_LEVEL=info
